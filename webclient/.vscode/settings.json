{
    "files.eol": "\n",
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "eslint.enable": true, //是否开启vscode的eslint
    // "eslint.source.fixAll.eslint": true,
    // 已经过时由
    //The setting is deprecated.
    // Use editor.codeActionsOnSave instead with a source.fixAll.eslint member.
    // "eslint.autoFixOnSave": true, //是否在保存的时候自动fix eslint
    "eslint.options": {
        //指定vscode的eslint所处理的文件的后缀
        "extensions": [".js", ".vue", ".ts", ".tsx"]
    },
    // TODO:[-] 如果使用Vetur插件，请设置"vetur.validation.template": false为避免默认的Vetur模板验证。查看vetur文档以获取更多信息。
    "vetur.validation.template": false,
    // 改进的TypeScript检测-一旦在ESLint中正确配置了TypeScript，就不再需要通过VS Code的eslint.validate设置进行其他配置。HTML和Vue.js文件也是如此。
    "eslint.validate": [
        "javascript",
        // "javascriptreact",
        // "typescript",
        // "vue",
        "html",
        {
            "language": "vue",
            "autoFix": true
        },
        {
            "language": "typescript",
            "autoFix": true
        },
        {
            "language": "typescriptreact",
            "autoFix": true
        }
        // { "language": "vue", "autoFix": true },
        // {
        //     "language": "typescript",
        //     "autoFix": true
        // }
    ],
    // "prettier.eslintIntegration": true,
    "typescript.tsdk": "node_modules/typescript/lib",
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    }
}
